<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:model="clr-namespace:Sample_Librarian.Model"
             xmlns:viewmodel="clr-namespace:Sample_Librarian.ViewModel"
             x:DataType="viewmodel:MainViewModel"
             x:Class="Sample_Librarian.MainPage">

    <ScrollView>
        <FlexLayout
            Direction="Row"
            JustifyContent="Center"
            >
            <FlexLayout
                Direction="Column"
                JustifyContent="Start"
                FlexLayout.Basis="1220"
                >
                <FlexLayout
                    x:Name="FileNav"
                    FlexLayout.Basis="60"
                    Direction="Row"
                    JustifyContent="Start"
                    Wrap="NoWrap"
                    AlignItems="Center"
                    Background="#D2EDF3"
                    Padding="20, 0"
                    >
                    <CollectionView
                    IsVisible="{Binding IsSourceFolderPresent}"
                    ItemsSource="{Binding SourceFolders}"
                    Background="#D2EDF3"
                    FlexLayout.Basis="550"
                    FlexLayout.Grow="1"
                    FlowDirection="LeftToRight"
                    ItemsLayout="HorizontalList"
                    >
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:SourceFolder">
                                <Button
                                    HeightRequest="40"
                                    WidthRequest="170"
                                    FontSize="20"
                                    Text="{Binding Name}"
                                    CommandParameter="{Binding FilePath}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=GetFilesCommand}"
                                    >
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#A7DDE9" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="true" TargetType="Button">
                                                    <Setter Property="Background" Value="#B0B0B0" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button
                        HeightRequest="40"
                        WidthRequest="60"
                        Text="+"
                        Command="{Binding AddSourceFolderCommand}"
                        />
                    <FlexLayout
                        Direction="Row"
                        JustifyContent="SpaceBetween"
                        AlignItems="Center"
                        FlexLayout.Basis="230"
                        Margin="20, 0, 20, 0"
                        >
                        <Image
                        Source="volume_icon.png"
                        SemanticProperties.Description="Volume"
                        HeightRequest="40"
                        WidthRequest="40"
                        />
                        <Slider HeightRequest="30"
                            WidthRequest="100"
                            Margin="0, 0, 20, 0"
                            Minimum="0"
                            Maximum="100"
                            Value="{Binding VolumeLevel}"
                                ></Slider>
                    </FlexLayout>
                    
                </FlexLayout>
                <FlexLayout
                    x:Name="FileTableHeader"
                    FlexLayout.Basis="20"
                    Direction="Row"
                    JustifyContent="Start"
                    Wrap="NoWrap"
                    AlignItems="Center"
                    Padding="20, 0, 20, 0"
                    Background="#B0B0B0"
                    >
                    <CheckBox
                        x:Name="FileTableHeaderCheckBox"
                        Margin="0, 0, 20, 0"
                        IsChecked="{Binding AllSelected}"
                        CheckedChanged="OnSelectAllChanged"
                        >
                    </CheckBox>
                    <Label
                            Text="File Name"
                            SemanticProperties.HeadingLevel="Level3"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="10, 0"
                            FlexLayout.Basis="500"
                                ></Label>
                    <Label
                            Text="Length"
                            SemanticProperties.HeadingLevel="Level3"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="10, 0"
                            WidthRequest="100"
                                ></Label>
                    <Label
                            Text="Format"
                            SemanticProperties.HeadingLevel="Level3"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="10, 0"
                            WidthRequest="100"
                                ></Label>
                    <Label
                            Text="Bit-Rate"
                            SemanticProperties.HeadingLevel="Level3"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="10, 0"
                            WidthRequest="100"
                                ></Label>
                    <Label
                            Text="Size"
                            SemanticProperties.HeadingLevel="Level3"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="10, 0, 30, 0"
                            WidthRequest="100"
                                ></Label>
                </FlexLayout>
                <CollectionView
                    ItemsSource="{Binding FileDataRows}"
                    Background="White"
                    FlexLayout.Basis="1333"
                    >
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:FileDataRow">
                            <FlexLayout
                                FlexLayout.Basis="20"
                                Direction="Row"
                                JustifyContent="Start"
                                Wrap="NoWrap"
                                AlignItems="Center"
                                Padding="20, 0, 20, 0"
                                Background="#F2F4F4"
                                >
                                <CheckBox
                                    x:Name="{Binding FileName}"
                                    Margin="10, 0, 0, 0"
                                    IsChecked="{Binding IsSelected}"
                                    ></CheckBox>
                                <Button
                                    IsVisible="{Binding HasPlayer}"
                                    HeightRequest="10"
                                    WidthRequest="20"
                                    Text=">"
                                    Padding="0"
                                    Margin="0"
                                    FontSize="10"
                                    CommandParameter="{Binding .}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=PlaySoundCommand}"
                                    />
                                <Label
                                        Text="{Binding FileName}"
                                        FontSize="16"
                                        Margin="10, 0, 0, 0"
                                        FlexLayout.Basis="500"
                                            ></Label>
                                <Label
                                        Text="{Binding Length}"
                                        FontSize="16"
                                        Margin="10, 0"
                                        WidthRequest="100"
                                            ></Label>
                                <Label
                                        Text="{Binding Format}"
                                        FontSize="16"
                                        Margin="10, 0"
                                        WidthRequest="100"
                                            ></Label>
                                <Label
                                        Text="{Binding BitRate}"
                                        FontSize="16"
                                        Margin="10, 0"
                                        WidthRequest="100"
                                            ></Label>
                                <Label
                                        Text="{Binding Size}"
                                        FontSize="16"
                                        Margin="10, 0, 30, 0"
                                        WidthRequest="100"
                                            ></Label>
                            </FlexLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </FlexLayout>
            <FlexLayout
                Direction="Column"
                JustifyContent="Start"
                FlexLayout.Basis="700"
                Background="#ECF7F9"
                >
                <FlexLayout
                    x:Name="CategoriesHeader"
                    FlexLayout.Basis="60"
                    Direction="Row"
                    JustifyContent="Start"
                    Wrap="NoWrap"
                    AlignItems="Center"
                    Background="#ECF7F9"
                    Padding="20, 0"
                    >
                    <Label
                        Text="Categorize:"
                        FontSize="24"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Start"
                        FlexLayout.Grow="1"
                        ></Label>
                    <FlexLayout
                        Direction="Row"
                        JustifyContent="SpaceBetween"
                        AlignItems="Center"
                        FlexLayout.Basis="350"
                        Margin="0, 0, 20, 0"
                        >
                        <Button
                        HeightRequest="40"
                        WidthRequest="170"
                        Text="Clear"
                        Command="{Binding ClearCategoriesCommand}"
                        Margin="20, 0"
                        />
                        <Button
                        HeightRequest="40"
                        WidthRequest="60"
                        Text="..."
                        Command="{Binding NavigateToSettingsCommand}"
                        Margin="0, 0, 20, 0"
                        Padding="10, 0"
                        />
                    </FlexLayout>

                </FlexLayout>
                <CollectionView
                    ItemsSource="{Binding CategoryGroups}"
                    Background="White"
                    FlexLayout.Basis="1250"
                    >
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:CategoryGroup">
                            <VerticalStackLayout>
                                <FlexLayout
                                Direction="Row"
                                JustifyContent="Start"
                                Wrap="Wrap"
                                HeightRequest="130"
                                    WidthRequest="692"
                                AlignItems="Center"
                                Padding="20"
                                Background="#ECF7F9"
                                BindableLayout.ItemsSource="{Binding Categories}"
                                >
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <Button
                                            HeightRequest="40"
                                            WidthRequest="170"
                                            FontSize="20"
                                            Text="{Binding Name}"
                                            CommandParameter="{Binding FilePath}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=GetCategoryGroupCommand}"
                                            >
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#A7DDE9" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="true" TargetType="Button">
                                                                <Setter Property="Background" Value="#B0B0B0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </FlexLayout>
                                <Button
                                            HeightRequest="40"
                                            WidthRequest="170"
                                            FontSize="20"
                                            Text="+"
                                            CommandParameter="{Binding .}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=StartAddCategoryCommand}"
                                            />
                                <Entry
                                    IsVisible="{Binding IsAdding}"
                                    Placeholder="Type..."
                                    TextColor="Black"
                                    x:Name="AddCategoryEntry"
                                    ReturnCommandParameter="{Binding Source={x:Reference AddCategoryEntry}, Path=Text}"
                                    ReturnCommand="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=CategoryTextChangedCommand}"
                                    MaxLength="12"
                                    />
                                <FlexLayout
                                    Direction="Row"
                                    JustifyContent="Center"
                                    WidthRequest="692"
                                    HeightRequest="45"
                                    IsVisible="{Binding IsAdding}">
                                    <Button
                                    HeightRequest="40"
                                    WidthRequest="170"
                                    FontSize="20"
                                    Text="Add"
                                    CommandParameter="{Binding Source={x:Reference AddCategoryEntry}, Path=Text}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=CategoryTextChangedCommand}"
                                    />
                                    <Button
                                    HeightRequest="40"
                                    WidthRequest="170"
                                    FontSize="20"
                                    Text="Cancel"
                                    CommandParameter="{Binding .}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=CancelAddCategoryCommand}"
                                    />
                                </FlexLayout>
                            </VerticalStackLayout>
                            
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <FlexLayout
                        Direction="Row"
                        JustifyContent="Center"
                        AlignItems="Center"
                        FlexLayout.Basis="60"
                        Margin="0"
                        Padding="20"
                        >
                    <Button
                        HeightRequest="60"
                        WidthRequest="200"
                        Text="DELETE"
                        Command="{Binding DeleteFilesCommand}"
                        Background="#DD6666"
                        Margin="10"
                        />
                    <Button
                        HeightRequest="60"
                        WidthRequest="200"
                        Text="CONFIRM"
                        Command="{Binding MoveFilesCommand}"
                        Margin="10"
                        Padding="10, 0"
                        />
                </FlexLayout>
            </FlexLayout>

            <!--<Label
                Text="Categories"
                Background="Blue"
                WidthRequest="600"
                />-->
        </FlexLayout>
    </ScrollView>

</ContentPage>
