<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:model="clr-namespace:Sample_Librarian.Model"
             xmlns:viewmodel="clr-namespace:Sample_Librarian.ViewModel"
             x:DataType="viewmodel:MainViewModel"
             x:Class="Sample_Librarian.MainPage">

    <ScrollView>
        <HorizontalStackLayout
            >
            <VerticalStackLayout
                WidthRequest="1220"
                Spacing="0"
                >
                <HorizontalStackLayout
                    x:Name="FileNav"
                    HeightRequest="60"
                    Background="#D2EDF3"
                    Padding="20, 0"
                    Spacing="0"
                    >
                    <CollectionView
                    IsVisible="{Binding IsSourceFolderPresent}"
                    ItemsSource="{Binding SourceFolders}"
                    Background="#D2EDF3"
                    WidthRequest="860"
                    FlowDirection="LeftToRight"
                    ItemsLayout="HorizontalList"
                    >
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:SourceFolder">
                                <Button
                                    HeightRequest="40"
                                    WidthRequest="170"
                                    FontSize="20"
                                    Text="{Binding Name}"
                                    ToolTipProperties.Text="{Binding FilePath}"
                                    CommandParameter="{Binding FilePath}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=GetFilesCommand}"
                                    >
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#A7DDE9" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="true" TargetType="Button">
                                                    <Setter Property="Background" Value="#B0B0B0" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button
                        IsVisible="{Binding IsSourceFolderPresent}"
                        HeightRequest="40"
                        WidthRequest="60"
                        Text="-"
                        ToolTipProperties.Text="Remove the selected source folder from the collection"
                        Command="{Binding RemoveSourceFolderCommand}"
                        Background="#DD6666"
                        />
                    <Button
                        IsVisible="{Binding IsSourceFoldersNotFull}"
                        HeightRequest="40"
                        WidthRequest="60"
                        Text="+"
                        ToolTipProperties.Text="Add a source folder to the collection"
                        Command="{Binding AddSourceFolderCommand}"
                        />
                    <HorizontalStackLayout
                        Spacing="20"
                        FlexLayout.Basis="230"
                        Margin="20, 0, 20, 0"
                        >
                        <Image
                        Source="volume_icon.png"
                        SemanticProperties.Description="Volume"
                        HeightRequest="40"
                        WidthRequest="40"
                        />
                        <Slider HeightRequest="30"
                            WidthRequest="100"
                            Margin="0, 0, 20, 0"
                            Minimum="0"
                            Maximum="100"
                            Value="{Binding VolumeLevel}"
                                ></Slider>
                    </HorizontalStackLayout>
                    
                </HorizontalStackLayout>
                <HorizontalStackLayout
                    x:Name="FileTableHeader"
                    HeightRequest="20"
                    Spacing="20"
                    Padding="20, 0, 20, 0"
                    Background="#B0B0B0"
                    >
                    <CheckBox
                        x:Name="FileTableHeaderCheckBox"
                        Margin="0, 0, 20, 0"
                        WidthRequest="20"
                        IsChecked="{Binding AllSelected}"
                        CheckedChanged="OnSelectAllChanged"
                        >
                    </CheckBox>
                    <Label
                            Text="File Name"
                            SemanticProperties.HeadingLevel="Level3"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="10, 0"
                            WidthRequest="470"
                            FlexLayout.Basis="500"
                                ></Label>
                    <Label
                            Text="Length"
                            SemanticProperties.HeadingLevel="Level3"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="10, 0"
                            WidthRequest="100"
                                ></Label>
                    <Label
                            Text="Format"
                            SemanticProperties.HeadingLevel="Level3"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="10, 0"
                            WidthRequest="100"
                                ></Label>
                    <Label
                            Text="Bit-Rate"
                            SemanticProperties.HeadingLevel="Level3"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="10, 0"
                            WidthRequest="100"
                                ></Label>
                    <Label
                            Text="Size"
                            SemanticProperties.HeadingLevel="Level3"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="10, 0, 30, 0"
                            WidthRequest="100"
                                ></Label>
                </HorizontalStackLayout>
                <CollectionView
                    ItemsSource="{Binding FileDataRows}"
                    Background="White"
                    HeightRequest="1333"
                    FlexLayout.Basis="1333"
                    >
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:FileDataRow">
                            <HorizontalStackLayout
                                HeightRequest="20"
                                FlexLayout.Basis="20"
                                Padding="10, 0, 20, 0"
                                Background="#F2F4F4"
                                Spacing="0"
                                >
                                <CheckBox
                                    x:Name="{Binding FileName}"
                                    Margin="10, 0, 0, 0"
                                    IsChecked="{Binding IsSelected}"
                                    ></CheckBox>
                                <Button
                                    IsVisible="{Binding HasPlayer}"
                                    HeightRequest="20"
                                    WidthRequest="40"
                                    Text=">"
                                    Padding="0"
                                    Margin="0, 0, 5, 0"
                                    FontSize="10"
                                    ToolTipProperties.Text="Play this sample"
                                    CommandParameter="{Binding .}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=PlaySoundCommand}"
                                    />
                                <Label
                                        Text="{Binding FileName}"
                                        FontSize="16"
                                        Margin="10, 0, 0, 0"
                                        WidthRequest="500"
                                        FlexLayout.Basis="500"
                                            ></Label>
                                <Label
                                        Text="{Binding Length}"
                                        FontSize="16"
                                        Margin="10, 0"
                                        WidthRequest="120"
                                            ></Label>
                                <Label
                                        Text="{Binding Format}"
                                        FontSize="16"
                                        Margin="10, 0"
                                        WidthRequest="120"
                                            ></Label>
                                <Label
                                        Text="{Binding BitRate}"
                                        FontSize="16"
                                        Margin="10, 0"
                                        WidthRequest="100"
                                            ></Label>
                                <Label
                                        Text="{Binding Size}"
                                        FontSize="16"
                                        Margin="10, 0, 30, 0"
                                        WidthRequest="100"
                                            ></Label>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
            <VerticalStackLayout
                WidthRequest="700"
                Background="#ECF7F9"
                >
                <HorizontalStackLayout
                    x:Name="CategoriesHeader"
                    HeightRequest="60"
                    Background="#ECF7F9"
                    Padding="20, 0"
                    Spacing="170"
                    >
                    <Label
                        Text="Categorize:"
                        FontSize="24"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Start"
                        FlexLayout.Grow="1"
                        WidthRequest="200"
                        ></Label>
                    <HorizontalStackLayout
                        WidthRequest="350"
                        FlexLayout.Basis="350"
                        Margin="0, 0, 20, 0"
                        >
                        <Button
                        HeightRequest="40"
                        WidthRequest="170"
                        Text="Clear"
                        ToolTipProperties.Text="Clear the current categories"
                        Command="{Binding ClearCategoriesCommand}"
                        Margin="20, 0"
                        />
                        <Button
                        HeightRequest="40"
                        WidthRequest="60"
                        Text="..."
                        ToolTipProperties.Text="Choose the location for your category folders"
                        Command="{Binding SetCategoriesBaseFilePathCommand}"
                        Margin="0, 0, 20, 0"
                        Padding="10, 0"
                        />
                    </HorizontalStackLayout>

                </HorizontalStackLayout>
                <CollectionView
                    ItemsSource="{Binding CategoryGroups}"
                    Background="White"
                    HeightRequest="1250"
                    >
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:CategoryGroup">
                            <VerticalStackLayout>
                                <Grid
                                RowDefinitions="40, 40, 40"
                                ColumnDefinitions="170, 170, 170, 170"
                                HeightRequest="130"
                                WidthRequest="692"
                                Background="#ECF7F9"
                                BindableLayout.ItemsSource="{Binding Categories}"
                                >
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <Button
                                            x:DataType="model:Category"
                                            Grid.Row="{Binding RowNumber}"
                                            Grid.Column="{Binding ColumnNumber}"
                                            HeightRequest="40"
                                            WidthRequest="170"
                                            FontSize="20"
                                            Text="{Binding Name}"
                                            CommandParameter="{Binding FilePath}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=GetCategoryGroupCommand}"
                                            >
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#A7DDE9" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="true" TargetType="Button">
                                                                <Setter Property="Background" Value="#B0B0B0" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </Grid>
                                <HorizontalStackLayout
                                    WidthRequest="692"
                                    HeightRequest="45"
                                    Spacing="60"
                                    Padding="140, 0, 20, 0">
                                    <Button
                                    HeightRequest="40"
                                    WidthRequest="170"
                                    FontSize="20"
                                    Text="-"
                                    ToolTipProperties.Text="Delete the selected category folder along with all of its contents"
                                    Background="#DD6666"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=DeleteCategoryCommand}"
                                    />
                                    <Button
                                    HeightRequest="40"
                                    WidthRequest="170"
                                    FontSize="20"
                                    Text="+"
                                    CommandParameter="{Binding .}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=StartAddCategoryCommand}"
                                    />
                                </HorizontalStackLayout>
                                <Entry
                                    IsVisible="{Binding IsAdding}"
                                    Placeholder="Type..."
                                    TextColor="Black"
                                    x:Name="AddCategoryEntry"
                                    ReturnCommandParameter="{Binding Source={x:Reference AddCategoryEntry}, Path=Text}"
                                    ReturnCommand="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=CategoryTextChangedCommand}"
                                    MaxLength="12"
                                    />
                                <HorizontalStackLayout
                                    WidthRequest="692"
                                    HeightRequest="45"
                                    Spacing="60"
                                    Padding="140, 0, 20, 0"
                                    IsVisible="{Binding IsAdding}">
                                    <Button
                                    HeightRequest="40"
                                    WidthRequest="170"
                                    FontSize="20"
                                    Text="Add"
                                    CommandParameter="{Binding Source={x:Reference AddCategoryEntry}, Path=Text}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=CategoryTextChangedCommand}"
                                    />
                                    <Button
                                    HeightRequest="40"
                                    WidthRequest="170"
                                    FontSize="20"
                                    Text="Cancel"
                                    CommandParameter="{Binding .}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=CancelAddCategoryCommand}"
                                    />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <HorizontalStackLayout
                        HeightRequest="60"
                        Margin="0, 20, 0, 0"
                        Spacing="50"
                        Padding="100, 0, 20, 0"
                        >
                    <Button
                        HeightRequest="60"
                        WidthRequest="200"
                        Text="DELETE"
                        Command="{Binding DeleteFilesCommand}"
                        ToolTipProperties.Text="Delete the selected files from the source folder"
                        Background="#DD6666"
                        Margin="10"
                        VerticalOptions="Center"
                        />
                    <Button
                        HeightRequest="60"
                        WidthRequest="200"
                        Text="CONFIRM"
                        Command="{Binding MoveFilesCommand}"
                        ToolTipProperties.Text="Move the selected files to the selected category folder"
                        Margin="10"
                        Padding="10, 0"
                        VerticalOptions="Center"
                        />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!--<Label
                Text="Categories"
                Background="Blue"
                WidthRequest="600"
                />-->
        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>
